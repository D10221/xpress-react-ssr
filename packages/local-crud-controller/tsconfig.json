  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                     
    "declaration": true,                   
    "sourceMap": true,                     
    "outDir": "./lib",                               
    "strict": true,                               
    "moduleResolution": "node",                
    "esModuleInterop": true                       
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./src/views/browser/**/*.*"
  ]
}